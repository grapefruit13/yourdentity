rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 기본적으로 모든 접근 거부
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // files 폴더 - randomFolder 구조 (files/{randomFolder}/{fileName})
    // 예: files/abc123def456/document_xyz789.pdf
    match /files/{randomFolder}/{fileName} {
      // 커뮤니티 파일은 공개 읽기 가능 (public: true로 설정되어 있음)
      allow read: if true;
      
      // 쓰기는 서버(Admin SDK)에서만 허용, 클라이언트 직접 접근 차단
      allow write: if false;
    }
  }
}
